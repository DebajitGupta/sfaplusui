
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <nav class="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Interface Entry</li>
            </ol>
            <div class="ml-auto">
                <button type="button" class="btn bg-gradient-primary" ng-click="SubmitSubscriptionData(e)">Submit</button>
            </div>
        </nav>
    </div><!-- /.container-fluid -->
</div>


<div role="main">
    <div ng-controller="">


        <div class="col-lg-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Add Interface</h3>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="form-group">
                                <input type="text" class="form-control" name="mname" placeholder="Enter Interface Name">
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="mname">
                                    <option>Select Interface Type</option>
                                    <option>option 2</option>
                                    <option>option 3</option>
                                    <option>option 4</option>
                                    <option>option 5</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox pt-2">
                                    <input class="custom-control-input" type="checkbox" id="customCheckbox1" value="option1">
                                    <label for="customCheckbox1" class="custom-control-label">Addon</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <input type="text" class="form-control" name="noemployee" placeholder="Enter Api Name">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="noemployee" placeholder="Enter Serial Number">
                            </div>
                            <div class="form-group">
                                <div class="custom-control custom-checkbox pt-2">
                                    <input class="custom-control-input" type="checkbox" id="customCheckbox2" value="option1">
                                    <label for="customCheckbox2" class="custom-control-label">Active</label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="form-group">
                                <input type="text" class="form-control" name="noinfluencer" placeholder="Enter Api IP">
                            </div>
                            <div class="form-group">
                                <select class="form-control" name="mname">
                                    <option>Select Parent Name</option>
                                    <option>option 2</option>
                                    <option>option 3</option>
                                    <option>option 4</option>
                                    <option>option 5</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>